<abp-card >
    <abp-card-header>
        <h5 class="card-title" data-card-widget="collapse" aria-expanded="false">
            @TL["QueryCondition"]
        </h5>
        <div class="card-tools">
            <button type="button" class="btn btn-tool"  data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </abp-card-header>
    <abp-card-body>
        <abp-row>
            <abp-column size-sm="_3" class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">@TL["Filter"]</span>
                </div>
                <input type="text" class="form-control" id="filter">
            </abp-column>


            <abp-column size-sm="_3" class="input-group">
                <button type="button" id="search" class="btn btn-primary btn-search">
                    <i class="fa fa-search"></i>
                    @L["Search"].Value
                </button>
            </abp-column>
        </abp-row>
    </abp-card-body>
</abp-card>

<abp-card>
    <abp-card-body>
        <abp-table striped-rows="true" id="IdentityUsersTable">
            <thead Theme="Light">
                <tr>
                    <th>@L["Actions"]</th>
                    <th>@L["UserName"]</th>
                    <th>@L["EmailAddress"]</th>
                    <th>@L["PhoneNumber"]</th>
                    <th>@TL["Name"]</th>
                </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>
